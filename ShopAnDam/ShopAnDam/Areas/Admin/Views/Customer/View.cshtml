
@model ShopAnDam.Models.Framework.Customer

@{
    ViewBag.Title = "Thông tin chi tiết";
    Layout = null;

}

@*@section header{
    Thông tin chi tiết
}*@


<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Thông tin chi tiết</h4>
            @using (Html.BeginForm("View", "Customer", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal style-form">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label"})
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
