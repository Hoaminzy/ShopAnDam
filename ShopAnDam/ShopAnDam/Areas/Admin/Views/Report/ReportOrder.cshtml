@model PagedList.IPagedList<ShopAnDam.Models.Framework.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Thống kê hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Đơn hàng đã hủy
}

<div class="row mt">

    @using (Html.BeginForm("ReportOrder", "Report", FormMethod.Get))
    {
        <div class="form-group col-lg-12">

            <div class="input-append col-md-3">
                <input type="text" class="form-control " value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa cần tìm">
                <span class="input-group-btn add-on">
                    <button class="btn btn-theme" type="submit"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
    }
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Mã hóa đơn</th>
                        <th><i class="fa fa-bullhorn"></i> Tên khách hàng</th>
                        <th><i class="fa fa-bullhorn"></i> Số điện thoại</th>
                        <th><i class="fa fa-bullhorn"></i> Địa chỉ</th>
                        <th><i class="fa fa-bullhorn"></i> Ngày tạo</th>
                        <th><i class="fa fa-bullhorn"></i> Trạng thái</th>
                        <th><i class=" fa fa-edit"></i> Hành động</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td><b>HD</b>@item.ID</td>
                            <td>@item.NameShip</td>
                            <td>@item.PhoneShip</td>
                            <td>@item.AdressShip</td>
                            <td>@item.CreateDate.Value.ToString("dd/MM/yyyy")</td>
                            <td><a href="#" class="label label-danger label-mini btn-active">@item.Status</a>
                            </td>
                            <td> <a class="btn btn-success btn-xs " href="/Admin/Order/OrderDetails/@item.ID" data-id="@item.ID"><i class="fa fa-check"></i></a></td>

                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("CanceledOrder", new { page, SearchSanPham = @ViewBag.SearchSanPham }))
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>


<div class="modal fade" id="myModal" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Chỉnh sửa sản phẩm</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
            </div>
        </div>

    </div>
</div>




