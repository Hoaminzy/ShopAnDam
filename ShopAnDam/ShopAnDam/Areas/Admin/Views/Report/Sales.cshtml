@model List<ShopAnDam.Models.ViewModel.OrderViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Sales";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> Mã hóa đơn</th>
                        <th><i class="fa fa-bullhorn"></i> Số lượng SP đã bán</th>
                        <th><i class="fa fa-bullhorn"></i> Tổng tiền nhập</th>
                        <th><i class="fa fa-bullhorn"></i> Tổng tiền bán</th>
                        <th><i class="fa fa-bullhorn"></i> Lợi nhuận</th>
                        <th><i class=" fa fa-edit"></i> Hành động</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        var tongtiennhap = item.Prices * item.Quantity;
                        var tongtienban = item.Price * item.Quantity;
                        var loinhuan = tongtienban - tongtiennhap;
                    <tr id="row_@item.ID">
                        <td><b>HD</b>@item.ID</td>
                        <td>@item.Quantity</td>
                        <td>@item.PhoneShip</td>
                        @*<td>@(tongtiennhap.HasValue?tongtiennhap.Value.ToString("N0"):"")</td>
                          <td>@(tongtienban.HasValue? tongtienban.Value.ToString("N0"):"")</td>
                          <td>@(loinhuan.Value.ToString("N0"))</td>*@
                        <td>@(item.Prices.HasValue?item.Prices.Value.ToString("N0"):"")</td>
                        <td>@(item.Price.HasValue? item.Price.Value.ToString("N0"):"")</td>
                        <td>@(((item.Price) - (item.Prices)).Value.ToString("N0"))</td>
                        <td> <a class="btn btn-success btn-xs " href="/Admin/Order/OrderDetails/@item.ID" data-id="@item.ID"><i class="fa fa-check"></i></a></td>

                    </tr>
                    }
                </tbody>
            </table>
          @*  @Html.PagedListPager(Model, page => Url.Action("Sales", new { page, SearchSanPham = @ViewBag.SearchSanPham }))*@
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>


