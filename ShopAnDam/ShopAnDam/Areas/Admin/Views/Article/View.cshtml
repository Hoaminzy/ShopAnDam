
@model ShopAnDam.Models.Framework.Article
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div class="col-md-12" style="margin:10px" >
            <p>Mã bài viết: @Model.ID<br /></p>
            <p>Tên bài viết: @Model.Name<br /></p>
            <p>Hình ảnh: <img src="@Model.Images" style="width: 150px; height: 150px" /> <br /></p>
            <p>Tiêu đề ngắn:@Model.Title<br /></p>
            <p>Thẻ Meta: @Model.MetaTitle<br /></p>
            <p>Mô tả: @Model.Description<br /></p>
            <p>Nội dung: @Model.Content<br /></p>
            <p>
                Trạng thái:

                @if (Model.Status == true)
                {
                    <a href="#" class="label label-success label-mini btn-active">Hoạt động</a>
                }
                else
                {
                    <a href="#" class="label label-success label-mini btn-active">Ẩn</a>
                }
            </p>
            <p>Người tạo: @Model.CreateBy<br /></p>
            
        </div>
        <div class="col-md-12 col-md-offset-10">
            <a class="btn btn-danger" href="/Admin/Article/Index"><i class="fa fa-sign-out">Hủy</i></a>
        </div>
    </div>
</div>


