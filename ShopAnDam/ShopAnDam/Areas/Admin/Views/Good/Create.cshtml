@model List<ShopAnDam.Models.ViewModel.GoodViewModel>
@{
    ViewBag.Title = "Tạo phiếu";
    Layout =null;
}

<script src="~/Assets/admin/js/controller/Good.js"></script>

@using (Html.BeginForm("Create", "Good", FormMethod.Post))
{
    <div class="form-group">
        <div class="col-md-10">
            Nhà cung cấp:
            @Html.DropDownList("SupplyID", new SelectList(ViewBag.SupplyID, "ID", "Name"), "Chọn nhà cung cấp", new { @class = "form-control", @id = "ddlncc" })
            <input type="hidden" id="hdnNCC" name="hdnNCC" />
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            Nhà cung cấp:
            @Html.DropDownList("ProductID", new SelectList(ViewBag.ProductID, "ID", "Name"), "Chọn sản phẩm", new { @class = "form-control", @id = "ddlSanPham" })
        </div>

    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td></td>
                        <td>@item.product.Name</td>
                        <td><input type="number" class="txtQuantity" data-id="@item.product.ID" value="@item.QuantityYC" /></td>
                        <td>
                            <a href="#" data-id="@item.product.ID" class="btn btn-white border-secondary bg-white btn-md mb-2 btn-delete">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
    <div class="form-group">
        <button id="btnCapNhat" href="#" class="btn btn-primary ">Cập nhật</button>

        <button id="btnThemPhieuYeuCau1" type="submit" class="btn btn-primary">Thêm phiếu yêu cầu</button>

    </div>
}
<div>
    @Html.ActionLink("Trở về", "Index")
</div>
