
@model ShopAnDam.Models.Framework.Image

@{
    ViewBag.Title = "Thêm mới";
    Layout = null;
}


<script>
    $(document).ready(function () {
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })
    });
</script>

<div class="row mt">
    <div class="col-lg-12">
        <div class="">
            @using (Html.BeginForm("Create", "Image", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div class="form-group col-lg-4 col-sm-offset-2">
                        @Html.LabelFor(model => model.ProductID, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        @Html.DropDownListFor(model => model.ProductID, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.ArticleID, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        @Html.DropDownListFor(model => model.ArticleID, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ArticleID, "", new { @class = "text-danger" })
                    </div>                 
                </div>
                <div class="form-horizontal ">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Image1, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-md-6">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Image1, new { @class = "form-control", @id = "txtImage" })
                                @Html.ValidationMessageFor(model => model.Image1, "", new { @class = "text-danger" })
                                <span class="input-group-btn">
                                    <a class="btn btn-theme03" id="btnSelectImage" href="#"><i class="fa fa-cloud-upload"></i></a>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.CreateDate, htmlAttributes: new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-8 col-md-2">
                            <button type="submit" class="btn btn-theme"><i class="fa fa-plus"></i>Thêm mới</button>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
    <!-- col-lg-12-->
</div>
