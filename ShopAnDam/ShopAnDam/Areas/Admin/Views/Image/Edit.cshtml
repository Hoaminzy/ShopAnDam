
@model ShopAnDam.Models.Framework.Product_Image

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script>
        $(document).ready(function () {
            $('#btnSelectImage').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            })
        });
    </script>
    }
<div class="row mt">
    <div class="col-lg-10">
        <div>
            <h4 class="mb"><i class="fa fa-angle-right"></i> Chỉnh sửa hình ảnh</h4>
            <div style="margin-left:20px">
                @using (Html.BeginForm("Edit", "Image", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-md-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Image, htmlAttributes: new { @class = "form-control", @id = "txtImage" })
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    <span class="input-group-btn">
                                        <a class="btn btn-theme03" id="btnSelectImage" href="#"><i class="fa fa-cloud-upload"></i></a>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.CreateDate, htmlAttributes: new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-6 col-md-2">
                                <button type="submit" class="btn btn-theme"><i class="fa fa-edit"></i>Chỉnh sửa</button>
                            </div>

                        </div>
                    </div>
                }
            </div>
           
        </div>
    </div>
    <!-- col-lg-12-->
</div>
