
@model ShopAnDam.Models.Framework.Category

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = null;

}

@section header{
    Chỉnh sửa danh mục sản phẩm
}
<script>
    $('#name').keypress(function () {
        $('#meta').val(getMeta($(this).val()));
    });

    function getMeta(title) {
        return title.toLowerCase().trim()  //đưa hết về kiểu chữ thường
            .replace(/à|á|ạ|ả|ã|ằ|ắ|ẳ|ặ|ẵ|ấ|ầ|ẩ|ậ|ẫ/g, "a")
            .replace(/\ /g, '-')
            .replace(/đ/g, "d")
            .replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y")
            .replace(/ù|ú|ụ|ủ|ũ|ừ|ứ|ử|ự|ữ/g, "u")
            .replace(/ó|ò|ỏ|ọ|õ|ồ|ố|ổ|ộ|ỗ|ớ|ờ|ở|ợ|ỡ.+/g, "o")
            .replace(/è|é|ẻ|ẹ|ẽ|ề|ế|ệ|ể|ễ/g, "e")
            .replace(/ì|í|ỉ|ị|ĩ/g, "i")
            .replace(/\s+/g, '-')
            .replace(/&/g, '-va-')
            .replace(/[^\w\-]+/g, '')
            .replace(/\-\-+/g, '-');
    }
</script>

<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Danh mục sản phẩm</h4>
            @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal style-form">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @id = "name" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MetaTilte, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.MetaTilte, htmlAttributes: new { @class = "form-control", @id = "meta" })
                            @Html.ValidationMessageFor(model => model.MetaTilte, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SeoTitle, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @* @Html.DropDownListFor(model => model.GroupID, new SelectList(ViewBag.productsList, "ProductId", "ProductName"), new { @class = "form-control" })*@
                            @Html.TextBoxFor(model => model.SeoTitle, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.DisplayOrder, htmlAttributes: new { @class = "form-control", type="number" })
                            @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                        <div class="col-sm-1">
                            @Html.CheckBoxFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-8 col-md-2">
                            <button type="submit" class="btn btn-theme"><i class="fa fa-edit"></i>Cập nhật</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
