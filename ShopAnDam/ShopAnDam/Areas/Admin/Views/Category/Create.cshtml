
@model ShopAnDam.Models.Framework.Category

@{
    ViewBag.Title = "Thêm mới";
    Layout = null;
}

@section header{
    Thêm mới danh mục sản phẩm
}


<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Thông tin danh mục</h4>
            @using (Html.BeginForm("Create", "Category", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
        <div class="form-horizontal style-form">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MetaTilte, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.MetaTilte, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MetaTilte, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SeoTitle, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.SeoTitle, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.DisplayOrder, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                <div class="col-sm-1">
                    @Html.CheckBoxFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.CreateDate, htmlAttributes: new { @class = "form-control", @type="date"})
                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-8 col-md-2">
                    <input type="submit" value="Thêm Mới" class="btn btn-theme" />
                </div>

            </div>
        </div>
            }
        </div>
    </div>
    <!-- col-lg-12-->
</div>
