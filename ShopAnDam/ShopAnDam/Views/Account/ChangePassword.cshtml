@model ShopAnDam.Models.ViewModel.ChangePassViewModel
@using ShopAnDam.Common;
@{
    Layout = null;

}
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Đổi Mật Khẩu</h4>
            @*@if (TempData["AlertMessage"] != null)
            {
                <div id="AlertBox" class="alert @TempData["AlertType"] hide">@TempData["AlertMessage"]</div>
            }*@
         
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal style-form">
                        <div class="form-group">
                            @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.PasswordFor(model => model.OldPassword, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.PasswordFor(model => model.NewPassword, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NewPasswordRe, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.PasswordFor(model => model.NewPasswordRe, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NewPasswordRe, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class=" col-sm-10">
                                <button type="submit" style="padding-left:30px" class="btn btn-warning"><i class="fa fa-edit"></i>Cập Nhật Mật Khẩu</button>
                            </div>
                        </div>
                    </div>
                }
            
        </div>
    </div>
</div>
