@model ShopAnDam.Models.Framework.Customer
   
@{
    ViewBag.Title = "Thay đổi thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="/" rel="nofollow"><i class="fa fa-home"></i> Trạng chủ</a>
                    <a href="/tai-khoan" rel="nofollow"><i class="fa fa-user-circle"></i> Tài khoản</a>
                    <span>Thay đổi thông tin </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Thay Đổi Thông Tin Tài Khoản</h4>
          
           
                @using (Html.BeginForm("EditAccount", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal style-form">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @id = "name" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control", @id = "name" })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control", @id = "meta" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @* @Html.DropDownListFor(model => model.GroupID, new SelectList(ViewBag.productsList, "ProductId", "ProductName"), new { @class = "form-control" })*@
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-sm-2 col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "form-control", type = "number" })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class=" col-sm-10">
                                <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i>Cập Nhật Tài Khoản</button>
                            </div>
                        </div>
                    </div>
                }
            
            </div>
    </div>
</div>
